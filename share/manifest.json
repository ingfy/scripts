{
	"manifest_version": 2,
	"version": "0.1",
	"name": "Share Link",
	"permissions": [
        "tabs",
        "*://*/*",
		"contextMenus"
	],
	"background": {
		"scripts": [
			"share.js"
		]
	},
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content.js"]
        }
    ],
	"icons": {
		"16": "icon/icon16.png",
		"24": "icon/icon24.png",
		"32": "icon/icon32.png",
		"64": "icon/icon64.png"
	},
	"options_page": "options.html"
}
